<form action="/postJob" method="post" >
    <!-- Job Category -->
    <select name="category" class="form-select" aria-label="Default select example">
        <option selected>Select Job Category</option>
        <option value="Tech">Tech</option>
        <option value="Non-Tech">Non-Tech</option>
    </select>
    <!-- Role -->
    <select name="role" class="form-select" aria-label="Default select example">
        <option selected>Select Job Designation</option>
        <option value="HR">HR</option>
        <option value="DevOps">DevOps</option>
        <option value="SDE">SDE</option>
        <option value="MERNDeveloper">MERNDeveloper</option>
    </select>
    <!-- Job Location -->
    <div class="mb-3">
        <label for="location" class="form-label">Job Location</label>
        <input type="text" class="form-control" id="location" name="location" placeholder="Mumbai, Delhi etc ..">
    </div>
    <!-- Company -->
    <div class="mb-3 row">
        <label for="company" class="col-sm-2 col-form-label">Company</label>
        <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="company" name="company" placeholder="Enter your company name">
        </div>
    </div>
    <!-- Salary + no. of opening -->
    <div class="row">
        <div class="col">
        <input type="number" class="form-control" name="ctc" placeholder="salary" aria-label="salary">
        </div>
        <div class="col">
        <input type="number" class="form-control" name="opening" placeholder="No. of openings" aria-label="opening">
        </div>
    </div> <br>
    <!-- Skills -->
    <span class="dropdown">
        <!-- <p> Course done </p> -->
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Skills Needed
        </button>
          <ul class="dropdown-menu dropdown-menu-lights">
            <li><div class="form-check">
                <input class="form-check-input" type="checkbox" name="skills" value="react" id="react">
                <label class="form-check-label" for="react"> React </label>
            </div></li>
            <li><hr class="dropdown-divider"></li>
            <li><div class="form-check">
                <label class="form-check-label" for="nodejs">NodeJs</label>
                <input class="form-check-input" type="checkbox" name="skills" value="nodejs" id="nodejs" >
            </div></li>
          </ul>
        </span>
    <span>
    <label for="date">Select a Date:</label>
    <input type="date" id="date" name="date"></span>

    <div><button type="submit" class="btn btn-secondary mt-5">Post Job</button></div>
  </form>